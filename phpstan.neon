includes:
    - vendor/larastan/larastan/extension.neon
    - phpstan-baseline.neon

parameters:
    level: 7

    stubFiles:
        - stubs/Mailcoach.stub

    paths:
        - app
        - app-modules
        - config
        - bootstrap
        - database/factories
        - routes

    excludePaths:
        - app-modules/SystemAdmin

    configDirectories:
        - config
        - app-modules/Documentation/config
